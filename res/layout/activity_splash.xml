<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    
    <ImageView 
        android:id="@+id/imgSplashFactory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/splashfactory" />
    
    <ImageView 
        android:id="@+id/imgBranchLogo"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/branch250" />
    
    <ImageView 
        android:id="@+id/imgBranchster"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/branchster" />
    
    <TextView 
        android:id="@+id/txtLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:padding="15dp"
        android:text="Loading Branchster parts..."
        android:gravity="center_vertical|right"
        android:textColor="#474747" />
    
</RelativeLayout>
    
